<div class="example">
  <div class="example-header">
    <h4 class="example-title">{{title}}</h4>
    {{#if description}}<p class="example-description">{{description}}</p>{{/if}}
  </div>
  <div class="example-body well">
    <div class="example-content-widget">
      {{> (lookup . 'content') }}
    </div>
    <button type="button" class="btn btn-link btn-xs example-code-toggle" data-toggle="button">View source</button>
    {{#if code}}
    <pre class="example-code"><code>{{code}}</code></pre>
    {{/if}}
  </div>
</div>
